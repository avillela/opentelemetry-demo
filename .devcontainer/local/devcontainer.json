{
    "name": "codespaces-local",
    "image": "mcr.microsoft.com/devcontainers/universal:dev-linux",
    "hostRequirements": {
      "cpus": 3,
      "memory": "8gb",
      "storage": "10gb"
    },
    "customizations": {
      "codespaces": {
        "openFiles": ["README.md"]
      },
      "vscode": {
        "extensions": [],
        "settings": {
          "workbench.editorAssociations": {
             "README.md": "vscode.markdown.preview.editor"
          }
        }
      }      
    },
    "forwardPorts": [8080, 9090]
  }
  