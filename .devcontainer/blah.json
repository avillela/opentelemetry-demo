{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4,
      "memory": "16gb",
      "storage": "32gb"
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "yarn install",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "yarn start"
    },
    "customizations": {
      "codespaces": {
        "openFiles": ["README.md"]
      }
    },
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [3000]
  }
  