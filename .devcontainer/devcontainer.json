{
    "image": "mcr.microsoft.com/devcontainers/universal:dev-linux",
    "hostRequirements": {
      "cpus": 4,
      "memory": "16gb",
      "storage": "32gb"
    },
    "customizations": {
      "codespaces": {
        "openFiles": ["README.md"]
      },
      "vscode": {
        "settings": {
          "workbench.editorAssociations": {
             "README.md": "vscode.markdown.preview.editor"
          }
        },
      }      
    },
    "forwardPorts": [8080, 9090]
  }
  